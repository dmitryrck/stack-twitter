<div class="list-group">
  <% @account.tweets.each do |tweet| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= time_tag tweet.created_at, class: :timeago %>
      </div>
      <div class="panel-body">
        <%= replace_mentions tweet.text %>
      </div>
    </div>
  <% end %>
</div>
