
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin'}) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>

  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: "Password (#{@minimum_password_length} characters minimum)" %>

  <%= f.label :password_confirmation, class: 'sr-only' %>
  <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'Confirm you password', autocomplete: 'off' %>

  <div class="pull-right">
    <%= render "devise/shared/links" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
